# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ese_eval?schema=public"

# NextAuth
# Full URL of your site (e.g., https://ese-eval.example.com)
NEXTAUTH_URL="http://localhost:3000"
# Random string of at least 32 characters for JWT encryption
NEXTAUTH_SECRET="your-secret-key-min-32-chars-long"

# Email (for magic link authentication)
# SMTP server hostname
EMAIL_SERVER_HOST="smtp.example.com"
# SMTP server port (usually 587 for TLS)
EMAIL_SERVER_PORT="587"
# SMTP username
EMAIL_SERVER_USER="user@example.com"
# SMTP password
EMAIL_SERVER_PASSWORD="your-smtp-password"
# From address for emails (e.g., noreply@ese-school.edu.eg)
EMAIL_FROM="noreply@ese-school.edu.eg"

# Alternative: Simple Email Server String
# EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Admin Setup
# Default admin user email (used in seed script)
ADMIN_EMAIL="admin@ese-school.edu.eg"

# Timezone
TZ="Africa/Cairo"
